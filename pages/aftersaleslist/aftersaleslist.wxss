/* pages/myorder/myorder.wxss */
page{background-color:#EDEDED}
.my-order{
    margin-top: 10px;
    /*border-bottom: 1rpx solid #EDEDED;*/
}

.item-title{
    display: flex;
    flex-direction:row;
    justify-content: center;
    align-items:center;
    height: 95rpx;
    color: #999999;
    text-align: center;
    border-bottom: 1rpx solid #EDEDED;
    font-size: 28rpx;
    background-color: #fff;
    position: relative;
}
.item-title image{
    position: absolute;
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    right: 10rpx;
}

.order-item{
    margin-bottom: 15rpx;
    color: #777777;
    background-color: #fff;
    font-size: 28rpx;
}
.order-item:last-child{
    margin-bottom:0;
}
.order-header{
    margin-left: 30rpx;
    border-bottom: 1rpx solid #EDEDED;
    padding: 25rpx 0;
}
.order-header text:last-child{
    margin-left: 10rpx;
}
.order-customer{
    display: flex;
    flex-direction: row;
}
.order-main{
    display: flex;
    height:150rpx;
    color: #6D6D6D;
    padding:20rpx 30rpx;
}
.order-main .item-left{
    flex-basis: 150rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
}
.order-main .item-left image{
    height: 100%;
    width: 100%;
}
.order-main .item-middle{
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.order-main .item-middle view{
    margin: 10rpx 0;
}
.order-main .item-right{
    display: flex;
    flex-basis: 120rpx;
    align-items: center;
    justify-content:flex-end;
}

.top{
    margin-top: 15rpx;
}
.order-bottom{
    margin-left: 30rpx;
    border-top: 1rpx solid #EDEDED;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #2F2F2F;
}
.order-bottom .pay{
    width: 170rpx;
    height: 60rpx;
    margin-right: 30rpx;
    background-color:#B42F2D;
    border-radius: 4rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
}
.order-bottom .pay:active{
    background-color:#9a211f;
}
.no-data{
    background: #fff;
}

/* 以下是条件选择器样式*/
.station {
    display: flex;
    flex-direction: row;
    justify-content:center ;
    width: 100%;
    height: 70rpx;
    /* background-color: #AB956D; */
    /* position: relative; */
    /* border-top:4rpx solid #fff; */
  }
  .select {
    box-sizing: border-box;
    width: 100%;
    height: 67rpx;
    border: 2rpx solid #efefef;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    vertical-align: top;
    background-color: #fff;
  }
  .select_box {
    margin-left: 20rpx;
    width: 30%;
    
    display: inline-block;
    position: relative;
  
  }
  .select_text {
    font-size: 29rpx;
    flex: 1;
  }
  
  .select_img {
    width: 40rpx;
    height: 40rpx;
    display: block;
    transition: transform 0.3s;
  }
  
  .select_img_rotate {
    transform: rotate(180deg);
  }
  
  .option_box {
    position: absolute;
    top: 70rpx;
    width: 100%;
    /* border: 2rpx solid #efefef; */
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
  }
  
  .option {
    display: block;
    line-height: 40rpx;
    font-size: 29rpx;
    border-bottom: 1rpx solid #efefef;
    padding: 10rpx;
  }

  /* 搜索框 */
.search{
    width: 69%;
    display: flex;
    flex-direction: row;
    align-items:center;
    vertical-align: top;
    margin-left: 5rpx;
    height: 70rpx;
    text-align: center;
  
    /* position: relative; */
  }
  .search view{
      display: flex;
      flex-direction: row;
      /* justify-content:center; */
      align-items: center;
      margin-left: 20rpx;
  }
  .search input{
    border:2rpx solid #efefef;
    background-color:  #FFF;
    border-radius: 12rpx;
    height: 67rpx;
    display: inline-block;
    /* margin-top: 3rpx; */
  }
