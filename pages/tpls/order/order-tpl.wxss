.Custom_my-order{
    margin-top: 10px;
}

.Custom_item-title{
    padding: 25rpx 0;
    color: #999999;
    text-align: center;
    border-bottom: 1rpx solid #EDEDED;
    font-size: 28rpx;
    background-color: #fff;
    position: relative;
}
.Custom_item-title image{
    position: absolute;
    transform: rotate(270deg);
    height: 48rpx;
    width: 48rpx;
    right: 10rpx;
}

.Custom_item-main {
  display: flex;
    flex-wrap: wrap;
}

.Custom_item-bottom{
  /* padding: 25rpx 0; */
  color: #999999;
  width: 100%;
  height: 100rpx;
  bottom: 0px;
  text-align: center;
  border-top: 1rpx solid #EDEDED;
  font-size: 28rpx;
  background-color: #fff;
  position: fixed;
}

.Custom_order-item{
  width: 50%;
  margin-bottom: 15rpx;
  color: #777777;
  background-color: #fff;
  font-size: 28rpx;
}
.Custom_order-item:last-child{
    margin-bottom:0;
}
.Custom_order-header{
    margin-left: 30rpx;
    border-bottom: 1rpx solid #EDEDED;
    padding: 25rpx 0;
}
.Custom_order-header text:last-child{
    margin-left: 10rpx;
}
.Custom_order-customer{
    display: flex;
    flex-direction: row;
}
.Custom_order-main{
    display: flex;
    height:280rpx;
    color: #6D6D6D;
    padding:20rpx 30rpx;
}
.Custom_order-main .Custom_item-left{
    flex-basis: 280rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
}
.Custom_order-main .Custom_item-left image{
    height: 100%;
    width: 100%;
}
.Custom_order-main .Custom_item-middle{
    flex: 1;
    /* margin-left: 20rpx; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 20rpx;
    border: 1rpx solid #EDEDED;
}
.Custom_order-main .Custom_item-middle view{
    margin: 10rpx 0;
}
.Custom_order-main .Custom_item-right{
    display: flex;
    flex-basis: 120rpx;
    align-items: center;
    justify-content:flex-end;
}

.Custom_top{
    margin-top: 15rpx;
}
.Custom_order-bottom{
    margin-left: 30rpx;
    border-top: 1rpx solid #EDEDED;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #2F2F2F;
}
.Custom_order-bottom .pay{
    width: 170rpx;
    height: 60rpx;
    margin-right: 30rpx;
    background-color:#B42F2D;
    border-radius: 4rpx;
    color: #fff;
    text-align: center;
    line-height: 60rpx;
}
.Custom_order-bottom .pay:active{
    background-color:#9a211f;
}
.Custom_no-data{
    background: #fff;
}
.Custom_icon {
  position: absolute;
  /* bottom: 20rpx; */
  padding-top: 7rpx;
  left: 45%;
  width: 80rpx;
  height: 100%;
}

/* 以下是条件选择器样式*/
.Custom_station {
    display: flex;
    flex-direction: row;
    justify-content:center ;
    width: 100%;
    height: 70rpx;
  }
  .Custom_select {
    box-sizing: border-box;
    width: 100%;
    height: 67rpx;
    border: 2rpx solid #efefef;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    vertical-align: top;
    background-color: #fff;
  }
  .Custom_select_box {
    margin-left: 20rpx;
    width: 30%;
    
    display: inline-block;
    position: relative;
  
  }
  .Custom_select_text {
    font-size: 29rpx;
    flex: 1;
  }
  @import "../cart.wxss";
  .Custom_select_img {
    width: 40rpx;
    height: 40rpx;
    display: block;
    transition: transform 0.3s;
  }
  
  .Custom_select_img_rotate {
    transform: rotate(180deg);
  }
  
  .Custom_option_box {
    position: absolute;
    top: 70rpx;
    width: 100%;
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
  }
  
  .Custom_option {
    display: block;
    line-height: 40rpx;
    font-size: 29rpx;
    border-bottom: 1rpx solid #efefef;
    padding: 10rpx;
  }

  /* 搜索框 */
.Custom_search{
    width: 69%;
    display: flex;
    flex-direction: row;
    align-items:center;
    vertical-align: top;
    margin-left: 5rpx;
    height: 70rpx;
    text-align: center;
  }
  .Custom_search view{
      display: flex;
      flex-direction: row;
      align-items: center;
      text-align-last: center;
      margin-left: 20rpx;
  }
  .Custom_search input{
    border:2rpx solid #efefef;
    background-color:  #FFF;
    border-radius: 12rpx;
    width: 400rpx;
    height: 67rpx;
    display: inline-block;
  }
  .Custom_lists{
    text-align: center;
    margin-top: 40rpx;
    color: rgb(230, 124, 25);
  }

  .Custom_lBtn {
    position: absolute;
    left: 0px;
    display: flex;
