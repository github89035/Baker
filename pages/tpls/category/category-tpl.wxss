.center-wrap {
  height: 100vh;
  width: 650rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow-y: scroll;
}

.category-title{
    margin: 10px;
    display: block;
    align-items: center;
    justify-content: center;
}
.category-typeno{
    width: 100%;
    padding: 10px 0;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size:28rpx;
    border-left: 6rpx solid #fff;
}
.category-groupno{
    width: 50px;
    padding: 10px 0;
    align-items: center;
    justify-content: center;
    text-align: center;
    font-size:28rpx;
    border-left: 6rpx solid #fff;
}
.maxWidth{
    width: 100%;
}
.category-groupno.selected{
    color: #FF4D40;
    border-left-color:#FF4D40;
}

.tanslategroup0{
    transform:translate(0,0);
}
.tanslategroup1{
    transform:translate(0,-100vh);
}
.tanslategroup2{
    transform:translate(0,-200vh);
}
.tanslategroup3{
    transform:translate(0,-300vh);
}
.tanslategroup4{
    transform:translate(0,-400vh);
}
.tanslategroup5{
    transform:translate(0,-500vh);
}

.showview{
    display: flex;
    transition: all 500ms ease-in-out;
}
.hidview{
    display: none;
    transition: all 500ms ease-in-out;
}