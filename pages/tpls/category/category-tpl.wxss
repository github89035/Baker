    width:120rpx;
    height: 120rpx;
}
.category-goods-items view {
    color:#444452;
    font-size: 24rpx;
}

.category-goods-items-two
{
    width: 45%;
    margin-bottom: 20rpx;
    text-align: center;
}
.category-goods-items-two image
{
    width: 240rpx;
    height: 240rpx;
}
.category-goods-items-two view
{
    color:#444452;
