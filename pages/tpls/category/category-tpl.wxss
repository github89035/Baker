.category-detail-box{
    overflow: hidden;
    padding: 10px 5px 55px 5px;
}
.category-header{
    height: 200rpx;
    text-align: center;
}
.category-header image{
    border-radius: 5rpx;
    width: 520rpx;
    max-height: 100%;
}
.foods-type-box{
    overflow-x: hidden;
}
.category-main{
    display: flex;
    flex-wrap: wrap;
    margin-top: 15rpx;
    margin-bottom: 15rpx;
}
.category-main-heightmax{
    height: 100%;
}
.center-wrap-button{
    display: flex;
    flex-wrap: row;
}
.category-goods-items{
    width: 28%;
    margin-bottom: 20rpx;
    text-align: center;
}
.category-goods-items.middle{
    margin:0 20rpx;
}
