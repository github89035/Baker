@import "../tpls/cart.wxss";
page {
  background-color: #F5F6F5;
}

.container {
  padding: 0rpx;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  box-sizing: border-box;
  background-color: #F5F6F5;
}

.top {
  margin-top: 35rpx;
}

.case-box{
  display: flex;
  flex-direction: row;
  width: 93%;
  height: 275rpx;
  margin-bottom: 35rpx;
}

.image-box{
  width: 70%;
}

.image-box image{
  width: 100%;
  height: 100%;
}

.text-box{
  font-size: 28rpx;
  width: 30%;
  height: 100%;
  background-color: rgb(223, 221, 221);
  text-align: center;
  line-height: 268.5rpx;
}