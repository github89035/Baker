@import "../tpls/cart.wxss";
page{
  background-color:#F5F6F5;
}
.container{
  padding: 0rpx;
  height: 100%;
  width:100%;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  box-sizing: border-box;
  background-color: #F5F6F5;
}
.theme-box {
  display: flex;
  flex-direction: column;
  align-content: space-around;
  width: 100%;
}
.theme-item {
  display: flex;
  flex-direction: row;
  background-color: #FFF;
  width: 93%;
  height: 300rpx;
  margin: 0 auto;
  border-bottom: 30rpx solid #F5F6F5;
  position: relative;
  box-sizing: border-box;
}
.theme-item-image{
  width: 65%;
}
.theme-item-image image{
  width: 100%;
  height: 100%;
}
.theme-item-text{
  text-align: center;
  line-height: 300rpx;
  /* height: 80rpx; */
  width: 35%;
  height: 100%;
  background-color: #FFF;
}



.home-main-theme {
  width: 100%;
}

