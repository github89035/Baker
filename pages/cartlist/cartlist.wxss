/* pages/cartlist/cartlist.wxss */
page{
    background-color:#EDEDED;
    margin-top: 10px;
}
.cartlist-item{
    margin-bottom: 15rpx;
    color: #777777;
    background-color: #fff;
    font-size: 28rpx;
}
.cartlist-item:last-child{
    margin-bottom:0;
}
.cartlist-main{
    display: flex;
    height:150rpx;
    color: #6D6D6D;
    padding:20rpx 30rpx;
}
.cartlist-main .item-left{
    flex-basis: 150rpx;
    height: 100%;
    border-radius: 4rpx;
}
.cartlist-main .item-left image{
    height: 100%;
    width: 100%;
}
.cartlist-main .item-middle{
    flex: 1;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.cartlist-main .item-middle view{
    margin: 10rpx 0;
}
.cartlist-main .item-right{
    display: flex;
    flex-basis: 120rpx;
    align-items: center;
    justify-content:flex-end;
}
.cartlist-bottom{
    margin-left: 30rpx;
    border-top: 1rpx solid #EDEDED;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #2F2F2F;
}
.delete{
    position:absolute;
    right: 20rpx;
    padding: 15rpx;
    background: #ff5959;
    color: #fff;
}